{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@shared/*": ["../shared/*"]
        },
        "target": "ES2022",
        "module": "commonjs",
        "moduleResolution": "node",
        "rootDir": "../",
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
    },
    "include": ["src", "../shared"]
}